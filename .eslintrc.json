{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:import/recommended",
    "standard-with-typescript",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "tsconfigRootDir": "./",
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "plugins": [
    "import",
    "@typescript-eslint",
    "json-format"
  ],
  "ignorePatterns": ["node_modules"],
  "rules": {
    "indent": "off",
    "@typescript-eslint/indent": "error",
    "max-len": ["error", { "code": 148 }],
    "jsx-quotes": ["error", "prefer-double"],
    "arrow-body-style": ["error", "as-needed"],
    "react/react-in-jsx-scope": "off",
    "semi": "off",
    "no-extra-boolean-cast": "off",
    "no-extra-parens": ["error", "all", { "returnAssign": false }],
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/space-before-function-paren": [0, "always"],
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/no-floating-promises": "off",
    "@typescript-eslint/promise-function-async": "off",
    "@typescript-eslint/strict-boolean-expressions": 0,
    "@typescript-eslint/consistent-type-assertions": [
      "off",
      {
        "assertionStyle": "never"
      }
    ],
    "@typescript-eslint/no-unsafe-call": "off",
    "@typescript-eslint/no-unsafe-argument": "off",
    "@typescript-eslint/no-unsafe-member-access": "off",
    "@typescript-eslint/no-unsafe-return": "off",
    "@typescript-eslint/member-delimiter-style": ["error", {
      "multiline": {
        "delimiter": "semi",    // 'none' or 'semi' or 'comma',
        "requireLast": true
      },
      "singleline": {
        "delimiter": "semi",
        "requireLast": false
      }
    }]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts",".d.ts"]
    },
    "import/internal-regex": "^@",
    "import/resolver": {
      "eslint-import-resolver-custom-alias": {
        "alias": {
          "@components/*": "./src/components/*",
          "@configuration/*": "./src/configuration/*",
          "@declarations/*": "./src/declarations/*",
          "@enums/*": "./src/enums/*",
          "@exceptions/*": "./src/exceptions/*",
          "@functions/*": "./src/functions/*",
          "@interfaces/*": "./src/interfaces/*",
          "@locales/*": "./src/locales/*",
          "@mocks/*": "./src/mocks/*",
          "@types": "./src/types",
          "@utils/*": "./src/utils/*",
          "i18next/typescript/options": "./node_modules/i18next/typescript/options.d.ts",
          "socket.io-client/build/esm/manager": "./node_modules/socket.io-client/build/esm/manager.d.ts",
          "socket.io-client/build/esm/socket": "./node_modules/socket.io-client/build/esm/socket.d.ts"
        },
        "extensions": [".ts", ".jsx"]
      },
      "typescript": {},
      "node": {
        "paths": ["src", "webpack.config.ts", "tailwind.config.ts"],
        "extensions": [".ts", ".tsx"]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
